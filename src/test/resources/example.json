{
  "build-server": {
    "output-only": true,
    "environments": [
      "second"
    ]
  },
  "dev-server": {
    "ip": "0.0.0.0",
    "port": 12345,
    "proxyhost": "localhost",
    "proxyport": 3000,
    "debug": true,
    "live-reload": true,
    "environments": [
      "first"
    ]
  },
  "environments": {
    "first": {
      "process": "/app.js",
      "templates": "handlebars",
      "test-framework": "jasmine",
      "files": {
        "folder": [
          "dir1",
          "dir2"
        ],
        "includes": [
          "**/*.coffee"
        ],
        "excludes": [
          "**/*.bin"
        ]
      },
      "test-files": {
        "folder": [
          "./tests"
        ],
        "includes": [
        ],
        "excludes": [
        ]
      },
      "processors":{
        "coffeeScript": {
          "src": "/main.coffee",
          "options": {
            "source-maps": true,
            "bare": true
          }
        },
        "browserify": {
          "dest": "/app.js",
          "options": {
            "aliases": {
              "./some-file": "library"
            }
          }
        }
      },
      "pipeline": ["coffeeScript", "browserify"]
    },
    "second": {
      "inherit": "first",
      "files": {
        "folder": [
          "."
        ]
      },
      "processors":{
        "uglifyjs": {}
      },
      "pipeline": ["coffeeScript", "browserify", "uglifyjs"]
    }
  }
}
